<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.mefti.simplefinance">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/title_activity_register" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ui.ExtratoActivity"
            android:screenOrientation="portrait"
            android:label="Simple Finance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.LancamentoActivity"
            android:screenOrientation="portrait"
            android:label="Adicionar Lançamento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.CategoriaActivity"
            android:screenOrientation="portrait"
            android:label="Categorias"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.CategoriaRegActivity"
            android:screenOrientation="portrait"
            android:label="Adicionar Categoria"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.CategoriaEditarRemoverActivity"
            android:screenOrientation="portrait"
            android:label="Editar ou Remover Categoria"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.LancamentoEditarRemoverActivity"
            android:screenOrientation="portrait"
            android:label="Editar ou Remover Lançamento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.FiltrarLancamentoActivity" />
        <activity
            android:name=".ui.ResultadoFiltroLancamentoActivity"
            android:screenOrientation="portrait"
            android:label="Lançamentos Filtrados "
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.MeusDadosActivity"></activity>
    </application>

</manifest>